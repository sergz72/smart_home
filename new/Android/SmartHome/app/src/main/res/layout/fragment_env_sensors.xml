<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnvSensorsFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.sz.charts.LineChart
            android:id="@+id/plot_temp_int"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            ap:title="@string/temp"
            ap:titleColor="@color/colorBlack"
            ap:titleSize="@integer/chartTitleSize"
            ap:legendColor="@color/colorBlack"
            ap:legendSize="@integer/chartLegendSize"
            ap:legendTableColumns="2"
            ap:labelColor="@color/colorBlack"
            ap:labelSize="@integer/chartLabelSize"
            ap:lineColors="@array/chartLineColors"
            ap:rangeTitle="°C"
            ap:domainTitle="@string/time"/>
        <Button
            android:id="@+id/next_temp_int_graph"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="&gt;"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.sz.charts.LineChart
            android:id="@+id/plot_temp_ext"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            ap:title="@string/temp"
            ap:titleColor="@color/colorBlack"
            ap:titleSize="@integer/chartTitleSize"
            ap:legendColor="@color/colorBlack"
            ap:legendSize="@integer/chartLegendSize"
            ap:legendTableColumns="2"
            ap:labelColor="@color/colorBlack"
            ap:labelSize="@integer/chartLabelSize"
            ap:lineColors="@array/chartLineColors"
            ap:rangeTitle="°C"
            ap:domainTitle="@string/time"/>
        <Button
            android:id="@+id/next_temp_ext_graph"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="&gt;"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.sz.charts.LineChart
            android:id="@+id/plot_humi"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            ap:title="@string/humi"
            ap:titleColor="@color/colorBlack"
            ap:titleSize="@integer/chartTitleSize"
            ap:legendColor="@color/colorBlack"
            ap:legendSize="@integer/chartLegendSize"
            ap:legendTableColumns="2"
            ap:labelColor="@color/colorBlack"
            ap:labelSize="@integer/chartLabelSize"
            ap:lineColors="@array/chartLineColors"
            ap:rangeTitle="%"
            ap:domainTitle="@string/time"/>
        <Button
            android:id="@+id/next_humi_graph"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="&gt;"
            />
    </LinearLayout>

    <com.sz.charts.LineChart
        android:id="@+id/plot_pres"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        ap:title="@string/pres"
        ap:titleColor="@color/colorBlack"
        ap:titleSize="@integer/chartTitleSize"
        ap:legendColor="@color/colorBlack"
        ap:legendSize="@integer/chartLegendSize"
        ap:legendTableColumns="2"
        ap:labelColor="@color/colorBlack"
        ap:labelSize="@integer/chartLabelSize"
        ap:lineColors="@array/chartLineColors"
        ap:rangeTitle="hPa"
        ap:domainTitle="@string/time"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.sz.charts.LineChart
            android:id="@+id/plot_co2"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            ap:title="@string/co2"
            ap:titleColor="@color/colorBlack"
            ap:titleSize="@integer/chartTitleSize"
            ap:legendColor="@color/colorBlack"
            ap:legendSize="@integer/chartLegendSize"
            ap:legendTableColumns="2"
            ap:labelColor="@color/colorBlack"
            ap:labelSize="@integer/chartLabelSize"
            ap:lineColors="@array/chartLineColors"
            ap:rangeTitle="%"
            ap:domainTitle="@string/time"/>
        <Button
            android:id="@+id/next_co2_graph"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="&gt;"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.sz.charts.LineChart
            android:id="@+id/plot_lux"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            ap:title="@string/lux"
            ap:titleColor="@color/colorBlack"
            ap:titleSize="@integer/chartTitleSize"
            ap:legendColor="@color/colorBlack"
            ap:legendSize="@integer/chartLegendSize"
            ap:legendTableColumns="2"
            ap:labelColor="@color/colorBlack"
            ap:labelSize="@integer/chartLabelSize"
            ap:lineColors="@array/chartLineColors"
            ap:rangeTitle="%"
            ap:domainTitle="@string/time"/>
        <Button
            android:id="@+id/next_lux_graph"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="&gt;"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
