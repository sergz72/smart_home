<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:typeface="monospace"
        android:textSize="240sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="3"/>
    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:typeface="monospace"
        android:textSize="240sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_rowSpan="3"/>
    <TextView
        android:id="@+id/minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:typeface="monospace"
        android:textSize="240sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_rowSpan="3"/>

    <TextView
        android:id="@+id/day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пятница"
        android:typeface="monospace"
        android:textSize="80sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_column="3"
        android:layout_row="0"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01.01.2020"
        android:typeface="monospace"
        android:textSize="80sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_column="3"
        android:layout_row="1"/>

    <TextView
        android:id="@+id/localTempN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N: ???.?"
        android:typeface="monospace"
        android:textSize="80sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_column="3"
        android:layout_row="2"/>

    <TextView
        android:id="@+id/localTempW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W: ???.?"
        android:typeface="monospace"
        android:textSize="80sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_column="3"
        android:layout_row="3"/>

    <TextView
        android:id="@+id/localPres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P: ???? hPa"
        android:typeface="monospace"
        android:textSize="80sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnSpan="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnSpan="4"
        android:orientation="horizontal">

        <com.sz.weather.ForecastItem
            android:id="@+id/forecastItem1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.sz.weather.ForecastItem
            android:id="@+id/forecastItem2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.sz.weather.ForecastItem
            android:id="@+id/forecastItem3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.sz.weather.ForecastItem
            android:id="@+id/forecastItem4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.sz.weather.ForecastItem
            android:id="@+id/forecastItem5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.sz.weather.ForecastItem
            android:id="@+id/forecastItem6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.sz.weather.ForecastItem
            android:id="@+id/forecastItem7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.sz.weather.ForecastItem
            android:id="@+id/forecastItem8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</GridLayout>