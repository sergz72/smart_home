<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="useHCSensor"
        android:summary="Use HC sensor"
        android:title="@string/pref_title_use_hc_sensor" />
    <EditTextPreference
        android:defaultValue="200"
        android:key="hcAlertDistance"
        android:summary="HC sensor alert distance"
        android:singleLine="true"
        android:inputType="number"
        android:title="@string/pref_title_hc_alert_distance" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="useVLSensor"
        android:summary="Use VL sensor"
        android:title="@string/pref_title_use_vl_sensor" />
    <EditTextPreference
        android:defaultValue="200"
        android:key="vlAlertDistance"
        android:summary="VL sensor alert distance"
        android:singleLine="true"
        android:inputType="number"
        android:title="@string/pref_title_vl_alert_distance" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="disableAlarm"
        android:summary="Disable alarm"
        android:title="@string/pref_title_disable_alarm" />

</PreferenceScreen>
