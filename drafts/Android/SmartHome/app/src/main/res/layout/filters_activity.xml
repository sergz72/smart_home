<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/filter_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="@string/filter_type"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        />
    <Spinner
        android:id="@+id/filter_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:entries="@array/filterTypeNames"
        android:entryValues="@array/filterTypeValues"
        />

    <Button
        android:id="@+id/select_date_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_date_start"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        />
    <TextView
        android:id="@+id/date_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="01.01.1980"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/offset_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="@string/offset"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        />
    <Spinner
        android:id="@+id/offset"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:layout_column="2"
        android:entries="@array/periodValues"
        android:entryValues="@array/periodValues"
        />
    <Spinner
        android:id="@+id/offset_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:layout_column="3"
        android:entries="@array/periodUnitNames"
        android:entryValues="@array/periodUnitValues"
        />

    <CheckBox
        android:id="@+id/period_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        />
    <TextView
        android:id="@+id/period_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="@string/period"
        android:layout_row="3"
        android:layout_column="1"
        />
    <Spinner
        android:id="@+id/period"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:layout_column="2"
        android:entries="@array/periodValues"
        android:entryValues="@array/periodValues"
        />
    <Spinner
        android:id="@+id/period_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:layout_column="3"
        android:entries="@array/periodUnitNames"
        android:entryValues="@array/periodUnitValues"
        />

    <Button
        android:id="@+id/set"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/set"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"
        />

</GridLayout>

